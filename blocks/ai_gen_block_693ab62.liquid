{% doc %}
  @prompt
    I want a carousel banner that allows adding multiple images or a mix of images and videos, and can be configured separately for desktop and mobile., Each banner should allow adding a heading and subheading, with flexible options to adjust the position of the text.Hide next banner preview in the carousel.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-carousel-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-carousel-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .ai-carousel-slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-carousel-media-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-carousel-media-mobile-{{ ai_gen_id }} {
    display: none;
  }

  .ai-carousel-content-{{ ai_gen_id }} {
    position: absolute;
    z-index: 2;
    max-width: 90%;
    padding: 20px;
    text-align: center;
  }

  .ai-carousel-content-{{ ai_gen_id }}--top-left {
    top: 40px;
    left: 40px;
    text-align: left;
  }

  .ai-carousel-content-{{ ai_gen_id }}--top-center {
    top: 40px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
  }

  .ai-carousel-content-{{ ai_gen_id }}--top-right {
    top: 40px;
    right: 40px;
    text-align: right;
  }

  .ai-carousel-content-{{ ai_gen_id }}--middle-left {
    top: 50%;
    left: 40px;
    transform: translateY(-50%);
    text-align: left;
  }

  .ai-carousel-content-{{ ai_gen_id }}--middle-center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .ai-carousel-content-{{ ai_gen_id }}--middle-right {
    top: 50%;
    right: 40px;
    transform: translateY(-50%);
    text-align: right;
  }

  .ai-carousel-content-{{ ai_gen_id }}--bottom-left {
    bottom: 40px;
    left: 40px;
    text-align: left;
  }

  .ai-carousel-content-{{ ai_gen_id }}--bottom-center {
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
  }

  .ai-carousel-content-{{ ai_gen_id }}--bottom-right {
    bottom: 40px;
    right: 40px;
    text-align: right;
  }

  .ai-carousel-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 10px;
    font-weight: 600;
  }

  .ai-carousel-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-carousel-controls-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
    z-index: 3;
    padding: 0 20px;
  }

  .ai-carousel-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .ai-carousel-button-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-carousel-button-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-carousel-dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 3;
  }

  .ai-carousel-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.5;
    cursor: pointer;
    border: none;
    padding: 0;
    transition: opacity 0.3s ease;
  }

  .ai-carousel-dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-carousel-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

