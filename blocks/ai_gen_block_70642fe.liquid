{% doc %}
  @prompt
    Generate a product component; the top left corner can be customized with a label., Generate a product collection component. Custom labels can be set in the top left corner.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-collection-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-collection-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-collection-products-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }

  .ai-product-item-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .ai-product-item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-label-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.label_offset }}px;
    left: {{ block.settings.label_offset }}px;
    background-color: {{ block.settings.label_background }};
    color: {{ block.settings.label_text_color }};
    padding: {{ block.settings.label_padding_vertical }}px {{ block.settings.label_padding_horizontal }}px;
    border-radius: {{ block.settings.label_border_radius }}px;
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: 600;
    z-index: 2;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex-grow: 1;
  }

  .ai-product-vendor-{{ ai_gen_id }} {
    font-size: {{ block.settings.vendor_font_size }}px;
    color: {{ block.settings.vendor_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-product-title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-title-link-{{ ai_gen_id }}:hover {
    text-decoration: underline;
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 500;
    margin-top: auto;
  }

  .ai-collection-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-collection-empty-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  .ai-collection-empty-message-{{ ai_gen_id }} {
    font-size: 16px;
    color: #999;
  }
{% endstyle %}

<div class="ai-collection-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_heading and block.settings.heading != blank %}
    <div class="ai-collection-header-{{ ai_gen_id }}">
      <h2 class="ai-collection-title-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
      {% if block.settings.description != blank %}
        <div class="ai-collection-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
    <div class="ai-collection-products-{{ ai_gen_id }}">
      {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
        <div class="ai-product-item-{{ ai_gen_id }}">
          <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
            <a href="{{ product.url }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                  class="ai-product-image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </a>

            {% if block.settings.show_labels %}
              {% if product.available == false %}
                <div class="ai-product-label-{{ ai_gen_id }}">
                  {{ block.settings.sold_out_label }}
                </div>
              {% elsif product.compare_at_price > product.price %}
                <div class="ai-product-label-{{ ai_gen_id }}">
                  {{ block.settings.sale_label }}
                </div>
              {% elsif block.settings.show_custom_label and block.settings.custom_label_text != blank %}
                <div class="ai-product-label-{{ ai_gen_id }}">
                  {{ block.settings.custom_label_text }}
                </div>
              {% endif %}
            {% endif %}
          </div>

          <div class="ai-product-content-{{ ai_gen_id }}">
            {% if block.settings.show_vendor and product.vendor != blank %}
              <p class="ai-product-vendor-{{ ai_gen_id }}">
                {{ product.vendor }}
              </p>
            {% endif %}

            <h3 class="ai-product-title-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-product-title-link-{{ ai_gen_id }}">
                {{ product.title }}
              </a>
            </h3>

            {% if block.settings.show_price %}
              <div class="ai-product-price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span style="text-decoration: line-through; opacity: 0.6; margin-right: 8px;">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
                {{ product.price | money }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="ai-collection-empty-{{ ai_gen_id }}">
      {{ 'collection-1' | placeholder_svg_tag }}
      <p class="ai-collection-empty-message-{{ ai_gen_id }}">
        Next, select a collection to display products
      </p>
    </div>
  {% endif %}
</div>

