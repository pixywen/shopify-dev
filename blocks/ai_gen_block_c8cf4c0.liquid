{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-collection-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-product-collection__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-product-collection__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-product-collection__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-product-collection__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-product-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background: #f5f5f5;
  }

  .ai-product-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-card__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-card__label-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.label_offset }}px;
    left: {{ block.settings.label_offset }}px;
    z-index: 2;
    padding: {{ block.settings.label_padding_vertical }}px {{ block.settings.label_padding_horizontal }}px;
    background: {{ block.settings.label_background }};
    color: {{ block.settings.label_text_color }};
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: {{ block.settings.label_font_weight }};
    text-transform: {{ block.settings.label_text_transform }};
    border-radius: {{ block.settings.label_border_radius }}px;
    letter-spacing: 0.5px;
  }

  .ai-product-card__badge-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.label_offset }}px;
    right: {{ block.settings.label_offset }}px;
    z-index: 2;
    padding: 4px 8px;
    background: #d82c0d;
    color: #ffffff;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    border-radius: 4px;
  }

  .ai-product-card__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-product-card__title-{{ ai_gen_id }} {
    margin: 0 0 8px;
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 500;
    line-height: 1.3;
  }

  .ai-product-card__title-link-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    text-decoration: none;
  }

  .ai-product-card__title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.product_title_hover_color }};
  }

  .ai-product-card__vendor-{{ ai_gen_id }} {
    font-size: 12px;
    color: #666;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-card__price-{{ ai_gen_id }} {
    margin: 0 0 12px;
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    color: {{ block.settings.price_color }};
  }

  .ai-product-card__price--sale-{{ ai_gen_id }} {
    color: #d82c0d;
  }

  .ai-product-card__compare-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    color: #999;
    font-size: {{ block.settings.price_size | times: 0.85 }}px;
    margin-left: 8px;
    font-weight: 400;
  }

  .ai-product-card__form-{{ ai_gen_id }} {
    margin-top: auto;
  }

  .ai-product-card__button-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.button_padding }}px;
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: {{ block.settings.button_text_transform }};
  }

  .ai-product-card__button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-product-card__button-{{ ai_gen_id }}:disabled {
    background: #e0e0e0;
    color: #999;
    cursor: not-allowed;
    transform: none;
  }

  .ai-product-card__button-{{ ai_gen_id }}:disabled:hover {
    background: #e0e0e0;
    color: #999;
  }

  .ai-product-collection__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  @media screen and (max-width: 989px) {
    .ai-product-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-product-collection__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-product-collection__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.75 }}px;
    }

    .ai-product-card__content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank or block.settings.description != blank %}
    <div class="ai-product-collection__header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-product-collection__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.description != blank %}
        <div class="ai-product-collection__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>
  {% endif %}

  {% if block.settings.collection != blank %}
    {% assign collection = block.settings.collection %}
    {% assign products_to_show = block.settings.products_to_show %}
    
    {% if collection.products.size > 0 %}
      <ul class="ai-product-collection__grid-{{ ai_gen_id }}">
        {% for product in collection.products limit: products_to_show %}
          <li class="ai-product-card-{{ ai_gen_id }}">
            <div class="ai-product-card__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-card__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-product-card__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}

              {% if block.settings.show_custom_label and block.settings.custom_label_text != blank %}
                <span class="ai-product-card__label-{{ ai_gen_id }}">
                  {{ block.settings.custom_label_text }}
                </span>
              {% endif %}

              {% if block.settings.show_sale_badge and product.compare_at_price > product.price %}
                <span class="ai-product-card__badge-{{ ai_gen_id }}">Sale</span>
              {% endif %}

              {% if block.settings.show_sold_out_badge and product.available == false %}
                <span class="ai-product-card__badge-{{ ai_gen_id }}">Sold out</span>
              {% endif %}
            </div>

            <div class="ai-product-card__content-{{ ai_gen_id }}">
              {% if block.settings.show_vendor and product.vendor != blank %}
                <div class="ai-product-card__vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
              {% endif %}

              <h3 class="ai-product-card__title-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-product-card__title-link-{{ ai_gen_id }}">
                  {{ product.title }}
                </a>
              </h3>

              {% if block.settings.show_price %}
                <div class="ai-product-card__price-{{ ai_gen_id }} {% if product.compare_at_price > product.price %}ai-product-card__price--sale-{{ ai_gen_id }}{% endif %}">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-product-card__compare-price-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_add_to_cart %}
                {% form 'product', product, class: 'ai-product-card__form-' | append: ai_gen_id %}
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  <button
                    type="submit"
                    name="add"
                    class="ai-product-card__button-{{ ai_gen_id }}"
                    {% unless product.available %}disabled{% endunless %}
                  >
                    {% if product.available %}
                      {{ block.settings.add_to_cart_text }}
                    {% else %}
                      {{ block.settings.sold_out_text }}
                    {% endif %}
                  </button>
                {% endform %}
              {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="ai-product-collection__empty-{{ ai_gen_id }}">
        <p>This collection is empty. Add products to display them here.</p>
      </div>
    {% endif %}
  {% else %}
    <div class="ai-product-collection__empty-{{ ai_gen_id }}">
      <p>Select a collection to display products.</p>
    </div>
  {% endif %}
</div>

