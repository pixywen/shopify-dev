      {%endif%} 
     {%endif%}
     {%if block.settings.section_text !=blank %}
     <div class="section-subtitle common-subtitle ">
    {{block.settings.section_text}}
     </div> 
     {%endif%} 
  

     {%if block.settings.section_header_custom_html !=blank %} 
     <div class="section-header-custom-html   ">
    {{block.settings.section_header_custom_html}}
     </div> 
     {%endif%}

    
</div>
     </div>
        
    </div>
   {%endif%}
    

