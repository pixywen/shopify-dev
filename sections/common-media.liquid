           {%unless block.settings.full_width%}
   <div class="common-wrapper ">
   {%endunless%} 
          <div class="bg-text-table-wrapper">
      <div class="hero__text-content  {{ block.settings.text_alignment }}  {{ block.settings.text_alignment_mb }}">
        <div style="max-width:{{block.settings.text_width}}%" class="bg-text-wrapper-inner  ">
          {%if block.settings.section_logo!=blank%}
          <div class="section-logo wow   ">
            {{block.settings.section_logo}}
          </div>
         {%endif%}
       
{%if block.settings.product_name!=blank%}
<h1 class="title common-product-name  ">{{ block.settings.product_name }}</h1>   
{%endif%}
