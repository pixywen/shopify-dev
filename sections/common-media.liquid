          sizes: "100vw",
          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
        }}
      </div>
      </div> 
    </div> 
     
    </div>
    {%- endif -%}  
   
  </div>
        {%else%}
<div class="video-box">

 
    {%if block.settings.media_type=="video"%}
 
      <video class="video-{{block.id}} video-element" onclick="this.paused?this.play():this.pause()" muted="" playsinline="" data-video-element="" data-html5-video="" autoplay="autoplay" loop="loop" draggable="true"> <source src="{{block.settings.video_url}}" type="video/mp4"></video>
      {%elsif block.settings.media_type=="youtube_video"%}
    
      {%- assign bg_video_id = block.settings.youtube_video-%}
      <div id="player-{{block.id|replace:'-','_'}}" data-plyr-provider="youtube" data-plyr-embed-id="{{bg_video_id }}"></div>

      <script>
        // This is the bare minimum JavaScript. You can opt to pass no arguments to setup.
  const bg_player_{{block.id|replace:'-','_'}} = new Plyr('#player-{{block.id|replace:'-','_'}}',{
      autoplay: true,
      loop: {
        active: true
      },
      controls:[],
      tooltips:{
        controls: false, seek: false
      },
      muted: true,
      ratio:"16:9",
      quality: 
        { default: 1080, options: [4320, 2880, 2160, 1440, 1080, 720, 576, 480, 360, 240] }
  });
  
  // Expose
  window.bg_player_{{block.id|replace:'-','_'}} = bg_player_{{block.id|replace:'-','_'}};

        </script>
      {%endif%}
</div>
{%endif%}

{%if block.settings.addition_content!=blank%}
<div class="common-tips text-{{block.settings.addition_content_alignment}}   {%if block.settings.tips_white%}white-tip{%endif%}">{{block.settings.addition_content}}
  </div>
  {%endif%}
</div>
