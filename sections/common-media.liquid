                <div style="padding-top:{{ 1 | divided_by: block.settings.image_pad.aspect_ratio | times: 100}}%;" data-image-loading-animation>
                   <div class="feature-row__image">
                  {{ block.settings.image_pad | image_url: width: 3840 | image_tag:
                    loading: 'lazy',                
                    sizes: "100vw",
                    widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                  }}
                </div>
                </div> 
              </div> 
               
              </div>
              {%- endif -%}            
      {%- if block.settings.image_mb != blank -%}
