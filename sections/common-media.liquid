          <div class="subtitle common-subtitle top  "> {{ block.settings.subtitle }}</div>
           {% endif %}
           {% endif %}
          {% if block.settings.title != blank %}
          {%if block.settings.is_page_banner%}
          {%if block.settings.product_name!=blank%}
