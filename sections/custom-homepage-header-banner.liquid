{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<div class="homepage-banner">
  {%- if section.settings.image != blank -%}
    <div class="homepage-banner__media">
      {{
        section.settings.image
        | image_url: width: 3840
        | image_tag:
          loading: 'lazy',
          width: section.settings.image.width,
          height: section.settings.image.height,
          class: 'homepage-banner__image'
      }}
    </div>
  {%- endif -%}

  <div class="homepage-banner__content">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          <h2 class="homepage-banner__heading">{{ block.settings.heading | escape }}</h2>
        {%- when 'text' -%}
          <div class="homepage-banner__text">{{ block.settings.text }}</div>
        {%- when 'subtext' -%}
          <div class="homepage-banner__subtext">{{ block.settings.subtext }}</div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

<style>
  .homepage-banner {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .homepage-banner__media {
    height: 100%;
    width: 100%;
    position: relative;
  }

  .homepage-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .homepage-banner__content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #ffffff;
    z-index: 2;
    width: 100%;
    max-width: var(--page-width);
    padding: 0 4rem;
  }

  .homepage-banner__heading {
    font-size: 4rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  .homepage-banner__text {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .homepage-banner__subtext {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .homepage-banner__content {
      padding: 0 1.5rem;
    }

    .homepage-banner__heading {
      font-size: 2.5rem;
    }

    .homepage-banner__text {
      font-size: 1.4rem;
    }

    .homepage-banner__subtext {
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "GG Homepage Header Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "SISELESS YOUR SUIT",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Empowering Individuality, Championing Sustainability, Crafting Fashion for Good",
          "label": "Text"
        }
      ]
    },
    {
      "type": "subtext",
      "name": "Sub Text",
      "settings": [
        {
          "type": "textarea",
          "id": "subtext",
          "default": "We not only make the best custom suits - but through path-breaking a.i. technology & sustainable manufacturing, we are drastically reducing textile waste, water usage & natural resource wastage.",
          "label": "Sub Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GG Homepage Header Banner",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "subtext"
        }
      ]
    }
  ]
}
{% endschema %} 