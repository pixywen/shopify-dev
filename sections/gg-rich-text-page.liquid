{{ 'gg-section-rich-text-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .gg-rich-text-{{ section.id }} {
    max-width: {{ section.settings.content_width }}px;
    padding-left: {{ section.settings.padding_left }}px;
    padding-right: {{ section.settings.padding_right }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="gg-rich-text gg-rich-text-{{ section.id }} section-{{ section.id }}-padding">
  {% if section.settings.image != blank %}
    <div class="gg-rich-text__banner">
      {{ section.settings.image | image_url: width: 3000 | image_tag:
        loading: 'lazy',
        sizes: "100vw",
        widths: '375, 550, 750, 1100, 1500, 2000, 3000'
      }}
    </div>
  {% endif %}

  <div class="gg-rich-text__content">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'main_title' %}
          <h1 class="gg-rich-text__main-title">{{ block.settings.title }}</h1>
        
        {% when 'paragraph' %}
          <div class="gg-rich-text__paragraph">
            {{ block.settings.text }}
          </div>
        
        {% when 'section' %}
          <div class="gg-rich-text__section">
            {% if block.settings.show_divider %}
              <hr class="gg-rich-text__divider">
            {% endif %}
            <h2 class="gg-rich-text__subtitle">{{ block.settings.title }}</h2>
            <div class="gg-rich-text__text">{{ block.settings.text }}</div>
          </div>

        {% when 'table' %}
          <div class="gg-rich-text__table-wrapper">
            <table class="gg-rich-text__table">
              <thead>
                <tr>
                  <th>{{ block.settings.header_1 }}</th>
                  <th>{{ block.settings.header_2 }}</th>
                  <th>{{ block.settings.header_3 }}</th>
                  <th>{{ block.settings.header_4 }}</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>{{ block.settings.row1_col1 }}</td>
                  <td>{{ block.settings.row1_col2 }}</td>
                  <td>{{ block.settings.row1_col3 }}</td>
                  <td>{{ block.settings.row1_col4 }}</td>
                </tr>
              </tbody>
            </table>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "GG-富文本页面",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "头部图片"
    },
    {
      "type": "header",
      "content": "布局设置"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 600,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "label": "内容最大宽度",
      "default": 800
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "左边距",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "右边距",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上边距",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下边距",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "main_title",
      "name": "大标题",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "标题文本",
          "default": "标题"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "文本段落",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "段落内容"
        }
      ]
    },
    {
      "type": "section",
      "name": "带标题的段落",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "小标题"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "段落内容"
        },
        {
          "type": "checkbox",
          "id": "show_divider",
          "label": "显示分割线",
          "default": true
        }
      ]
    },
    {
      "type": "table",
      "name": "表格",
      "settings": [
        {
          "type": "text",
          "id": "header_1",
          "label": "表头1",
          "default": "Shipping Method"
        },
        {
          "type": "text",
          "id": "header_2",
          "label": "表头2",
          "default": "Processed Time"
        },
        {
          "type": "text",
          "id": "header_3",
          "label": "表头3",
          "default": "Estimated Delivery"
        },
        {
          "type": "text",
          "id": "header_4",
          "label": "表头4",
          "default": "Notice"
        },
        {
          "type": "text",
          "id": "row1_col1",
          "label": "第1行第1列",
          "default": "Standard Shipping"
        },
        {
          "type": "text",
          "id": "row1_col2",
          "label": "第1行第2列",
          "default": "1-2 business days"
        },
        {
          "type": "text",
          "id": "row1_col3",
          "label": "第1行第3列",
          "default": "4-10 business days"
        },
        {
          "type": "text",
          "id": "row1_col4",
          "label": "第1行第4列",
          "default": "Your local Post Office or regional carrier may provide the final delivery"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GG-富文本页面"
    }
  ]
}
{% endschema %} 