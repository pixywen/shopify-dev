{{ 'gg-section-rich-text-page.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "GG-富文本页面",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "头部图片"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上边距",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下边距",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "main_title",
      "name": "大标题",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "标题文本",
          "default": "标题"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "文本段落",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "段落内容"
        }
      ]
    },
    {
      "type": "section",
      "name": "带标题的段落",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "小标题"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "段落内容"
        },
        {
          "type": "checkbox",
          "id": "show_divider",
          "label": "显示分割线",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GG-富文本页面",
      "blocks": [
        {
          "type": "main_title"
        },
        {
          "type": "paragraph"
        },
        {
          "type": "section"
        }
      ]
    }
  ]
}
{% endschema %} 