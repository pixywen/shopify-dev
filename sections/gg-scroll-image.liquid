<!-- GG-首页-滚动品牌图 -->
<!-- 品牌轮播条 -->

<link rel="stylesheet" href="{{ 'gg-scroll-image.css' | asset_url }}">
{% comment %} <noscript>{{ 'gg-scroll-image.css' | asset_url | stylesheet_tag }}</noscript> {% endcomment %}

{%- style -%}
.scroll-image-wrapper {
  --scroll-speed: {{ section.settings.scroll_speed }}s;
  --gap: {{ section.settings.gap }}px;
}
{%- endstyle -%}

<div class="scroll-image-wrapper">
  <div class="scroll-image-container">
    <div class="scroll-image-track" data-track="first">
      {%- for block in section.blocks -%}
        <div class="scroll-image-item" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            {{ block.settings.image | image_url: width: 1920 | image_tag: 
              class: 'scroll-image',
              loading: 'lazy',
              width: block.settings.image.width,
              height: block.settings.image.height,
              sizes: '100vw'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
    <div class="scroll-image-track" data-track="second">
      {%- for block in section.blocks -%}
        <div class="scroll-image-item" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            {{ block.settings.image | image_url: width: 1920 | image_tag: 
              class: 'scroll-image',
              loading: 'lazy',
              width: block.settings.image.width,
              height: block.settings.image.height,
              sizes: '100vw'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
    <div class="scroll-image-track" data-track="third">
      {%- for block in section.blocks -%}
        <div class="scroll-image-item" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            {{ block.settings.image | image_url: width: 1920 | image_tag: 
              class: 'scroll-image',
              loading: 'lazy',
              width: block.settings.image.width,
              height: block.settings.image.height,
              sizes: '100vw'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "GG-品牌轮播组件",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "scroll_speed",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "s",
      "label": "滚动速度",
      "default": 30
    },
    {
      "type": "range", 
      "id": "gap",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "图片间距",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "品牌图片",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "品牌图片，建议尺寸：1920px * 91px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GG-品牌轮播组件"
    }
  ]
}
{% endschema %} 