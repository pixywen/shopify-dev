{{ 'gg-section-simple-image-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #SimpleBanner-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: {{ section.settings.padding_left }}%;
    padding-right: {{ section.settings.padding_right }}%;
  }
{%- endstyle -%}

<div id="SimpleBanner-{{ section.id }}" class="gg-simple-banner">
  {%- if section.settings.image != blank -%}
    <div class="gg-simple-banner__desktop medium-hide small-hide">
      {{ section.settings.image | image_url: width: 3000 | image_tag:
        loading: 'lazy',
        width: section.settings.image.width,
        height: section.settings.image.height,
        class: 'gg-simple-banner__media',
        sizes: "100vw"
      }}
    </div>
  {%- endif -%}

  {%- if section.settings.image_mobile != blank -%}
    <div class="gg-simple-banner__mobile large-up-hide">
      {{ section.settings.image_mobile | image_url: width: 1920 | image_tag:
        loading: 'lazy',
        width: section.settings.image_mobile.width,
        height: section.settings.image_mobile.height,
        class: 'gg-simple-banner__media',
        sizes: "100vw"
      }}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "GG-基础图片横幅",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "PC端图片"
    },
    {
      "type": "image_picker", 
      "id": "image_mobile",
      "label": "移动端图片"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "上边距",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "下边距",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "%",
      "label": "左内边距",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "%",
      "label": "右内边距",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "GG-基础图片横幅"
    }
  ]
}
{% endschema %} 