<style>
.swym-wishlist-container-title-bar .swym-wishlist-main-title::before {
  content: '' !important;
  display: inline-block !important;
  width: 53px !important;
  height: 47px !important;
  background-image: url('{{ 'icon-wishlist.svg' | asset_url }}') !important;
  background-repeat: no-repeat !important;
  background-position: center !important;
  background-size: contain !important;
}

</style>
{% stylesheet %}

/* .swym-wishlist-container-title-bar {
  display: none !important;
} */
.swym-ui-component .swym-empty-wishlist-container {
  padding: 0 30px !important;
}
.swym-ui-component .swym-empty-wishlist-container .swym-empty-wishlist-title {
  line-height: normal !important;
}
 .swym-ui-component {
  background: rgba(240, 240, 240, 1) !important;
 }
.swym-ui-component.swym-wishlist-page .swym-wishlist-container-title-bar {
  padding: 178px 0 16px !important;
}
.swym-wishlist-container-title-bar .swym-wishlist-main-title {
  flex-direction: column !important;
}
.swym-ui-component.swym-wishlist-page div.swym-wishlist-container-title-bar {
  border-bottom: none !important;
}
.swym-ui-component.swym-wishlist-page .swym-wishlist-container-title-bar .swym-user-login-status {
  display: none !important;
}
.swym-ui-component.swym-wishlist-page .swym-wishlist-container-title-bar {
  justify-content: center !important;
}
.swym-ui-component.swym-wishlist-page {
    max-width: 1920px !important;
    margin: 10px auto !important;
}
.swym-ui-component .swym-empty-wishlist-container .swym-empty-wishlist-continue-btn {
  border-radius: 2px !important;
  font-size: 12px !important;
}
.swym-ui-component.swym-wishlist-page .swym-wishlist-container-title-bar div.swym-wishlist-main-title {
  font-size: 24px;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 29.26px;
  color: rgba(0, 0, 0, 1);
}
.swym-ui-component .swym-wishlist-grid {
    max-width: 1920px !important;
    margin: auto;
    width: 100%;
}

.swym-wishlist-context-menu,
.swym-action-container {
  display: none !important;
}

/* 隐藏详情页面中的标题 */
.swym-wishlist-detail-header {
  display: none !important;
}

/* 只为顶部标题添加心形图标 */
.swym-wishlist-container-title-bar .swym-wishlist-main-title {
  display: flex !important;
  align-items: center !important;
  gap: 17px !important;
}



.swym-wishlist-detail-separator{
  display: none !important;
}

.swym-wishlist-image-wrapper {
  position: relative !important;
  width: 100% !important;
  padding-bottom: 136.32% !important; /* 936:1276 Aspect Ratio */
  overflow: hidden !important;
  border-radius: 4px !important;
}

.swym-wishlist-image-wrapper .swym-wishlist-image {
  position: absolute !important;
  top: 50% !important;
  left: 50% !important;
  transform: translate(-50%, -50%) !important;
  width: auto !important;
  height: 100% !important;
  max-width: none !important;
  object-fit: cover !important;
}
.swym-ui-component .swym-wishlist-container-title-bar {
  height: auto !important;
}
@media screen and (max-width: 750px) {
  .swym-ui-component .swym-empty-wishlist-container .swym-empty-wishlist-continue-btn {
    border-radius: 2px !important;
    font-size: 3.2vw !important;
    width: 66.66vw !important;
    text-align: center;
    text-transform: uppercase;
  }
  .swym-ui-component.swym-wishlist-page .swym-wishlist-container-title-bar div.swym-wishlist-main-title {
    font-size: 4.8vw !important;
    margin-bottom: 6.53vw !important;
  }
  .swym-ui-component .swym-empty-wishlist-container .swym-empty-wishlist-title {
    margin: 2.66vw 0 20px !important;
  }
  .swym-ui-component.swym-wishlist-page div.swym-wishlist-container-title-bar {
    padding: 33.06vw 0 4vw !important;
  }
  .swym-wishlist-container-title-bar .swym-wishlist-main-title::before {
    width: 7.06vw !important;
    height: 6.26vw !important;
  }
}
{% endstylesheet %}

