{% doc %}
  @prompt
    I want a carousel banner that allows adding multiple images or a mix of images and videos, and can be configured separately for desktop and mobile.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-carousel-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-carousel-banner__viewport-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-banner__viewport-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }
  }

  .ai-carousel-banner__track-{{ ai_gen_id }} {
    display: flex;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  .ai-carousel-banner__slide-{{ ai_gen_id }} {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-carousel-banner__media-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.desktop_image_fit }};
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-banner__media-{{ ai_gen_id }} {
      object-fit: {{ block.settings.mobile_image_fit }};
    }
  }

  .ai-carousel-banner__media-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: inherit;
  }

  .ai-carousel-banner__media-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: inherit;
  }

  .ai-carousel-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-carousel-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-carousel-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-carousel-banner__controls-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 20px;
    pointer-events: none;
  }

  .ai-carousel-banner__button-{{ ai_gen_id }} {
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.arrow_background }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
    transition: opacity 0.3s ease;
  }

  .ai-carousel-banner__button-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-carousel-banner__button-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.arrow_size }}px * 0.5);
    height: calc({{ block.settings.arrow_size }}px * 0.5);
    stroke: {{ block.settings.arrow_color }};
  }

  .ai-carousel-banner__dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
  }

  .ai-carousel-banner__dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }

  .ai-carousel-banner__dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-carousel-banner__mobile-media-{{ ai_gen_id }} {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-banner__desktop-media-{{ ai_gen_id }} {
      display: none;
    }

    .ai-carousel-banner__mobile-media-{{ ai_gen_id }} {
      display: block;
    }
  }
{% endstyle %}

<carousel-banner-{{ ai_gen_id }}
  class="ai-carousel-banner-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-carousel-banner__viewport-{{ ai_gen_id }}">
    <div class="ai-carousel-banner__track-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign desktop_image_key = 'slide_' | append: i | append: '_desktop_image'
          assign desktop_video_key = 'slide_' | append: i | append: '_desktop_video'
          assign mobile_image_key = 'slide_' | append: i | append: '_mobile_image'
          assign mobile_video_key = 'slide_' | append: i | append: '_mobile_video'
          assign media_type_key = 'slide_' | append: i | append: '_media_type'
          assign link_key = 'slide_' | append: i | append: '_link'

          assign slide_enabled = block.settings[slide_enabled_key]
          assign desktop_image = block.settings[desktop_image_key]
          assign desktop_video = block.settings[desktop_video_key]
          assign mobile_image = block.settings[mobile_image_key]
          assign mobile_video = block.settings[mobile_video_key]
          assign media_type = block.settings[media_type_key]
          assign link = block.settings[link_key]
        %}

        {% if slide_enabled %}
          <div class="ai-carousel-banner__slide-{{ ai_gen_id }}" data-slide="{{ i }}">
            {% if link != blank %}
              <a href="{{ link }}" class="ai-carousel-banner__media-{{ ai_gen_id }}">
            {% else %}
              <div class="ai-carousel-banner__media-{{ ai_gen_id }}">
            {% endif %}

              {% if media_type == 'image' %}
                <div class="ai-carousel-banner__desktop-media-{{ ai_gen_id }}">
                  {% if desktop_image %}
                    <img
                      src="{{ desktop_image | image_url: width: 2000 }}"
                      alt="{{ desktop_image.alt | escape }}"
                      loading="lazy"
                      width="{{ desktop_image.width }}"
                      height="{{ desktop_image.height }}"
                    >
                  {% else %}
                    <div class="ai-carousel-banner__placeholder-{{ ai_gen_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                      <div class="ai-carousel-banner__empty-state-{{ ai_gen_id }}">
                        Add a desktop image for slide {{ i }}
                      </div>
                    </div>
                  {% endif %}
                </div>

                <div class="ai-carousel-banner__mobile-media-{{ ai_gen_id }}">
                  {% if mobile_image %}
                    <img
                      src="{{ mobile_image | image_url: width: 1000 }}"
                      alt="{{ mobile_image.alt | escape }}"
                      loading="lazy"
                      width="{{ mobile_image.width }}"
                      height="{{ mobile_image.height }}"
                    >
                  {% elsif desktop_image %}
                    <img
                      src="{{ desktop_image | image_url: width: 1000 }}"
                      alt="{{ desktop_image.alt | escape }}"
                      loading="lazy"
                      width="{{ desktop_image.width }}"
                      height="{{ desktop_image.height }}"
                    >
                  {% else %}
                    <div class="ai-carousel-banner__placeholder-{{ ai_gen_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                      <div class="ai-carousel-banner__empty-state-{{ ai_gen_id }}">
                        Add a mobile image for slide {{ i }}
                      </div>
                    </div>
                  {% endif %}
                </div>
              {% else %}
                <div class="ai-carousel-banner__desktop-media-{{ ai_gen_id }}">
                  {% if desktop_video %}
                    <video
                      autoplay
                      muted
                      loop
                      playsinline
                    >
                      <source src="{{ desktop_video }}" type="video/mp4">
                    </video>
                  {% else %}
                    <div class="ai-carousel-banner__placeholder-{{ ai_gen_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                      <div class="ai-carousel-banner__empty-state-{{ ai_gen_id }}">
                        Add a desktop video for slide {{ i }}
                      </div>
                    </div>
                  {% endif %}
                </div>

                <div class="ai-carousel-banner__mobile-media-{{ ai_gen_id }}">
                  {% if mobile_video %}
                    <video
                      autoplay
                      muted
                      loop
                      playsinline
                    >
                      <source src="{{ mobile_video }}" type="video/mp4">
                    </video>
                  {% elsif desktop_video %}
