                      {{ 'image' | placeholder_svg_tag }}
                      <div class="ai-carousel-banner__empty-state-{{ ai_gen_id }}">
                        Add a mobile video for slide {{ i }}
                      </div>
                    </div>
                  {% endif %}
                </div>
              {% endif %}

            {% if link != blank %}
              </a>
            {% else %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
