{% doc %}
  @prompt
    Create an image slideshow component that can display multiple sets of images simultaneously, and allows for separate configurations for desktop and mobile versions.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slideshow-container-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    position: relative;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-slideshow-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-slideshow-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 30px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-slideshow-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.image_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .ai-slideshow-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-slideshow-set-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: calc((100% - ({{ block.settings.sets_per_row_desktop | minus: 1 }} * {{ block.settings.image_gap }}px)) / {{ block.settings.sets_per_row_desktop }});
  }

  .ai-slideshow-set-images-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.image_gap }}px;
  }

  .ai-slideshow-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f4f4f4;
  }

  .ai-slideshow-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
  }

  .ai-slideshow-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-slideshow-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-slideshow-controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-top: 30px;
  }

  .ai-slideshow-button-{{ ai_gen_id }} {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_icon_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .ai-slideshow-button-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-slideshow-button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-slideshow-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-slideshow-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.3;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: opacity 0.3s ease;
  }

  .ai-slideshow-dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  @media screen and (max-width: 749px) {
    .ai-slideshow-set-{{ ai_gen_id }} {
      width: calc((100% - ({{ block.settings.sets_per_row_mobile | minus: 1 }} * {{ block.settings.image_gap }}px)) / {{ block.settings.sets_per_row_mobile }});
    }

    .ai-slideshow-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }
{% endstyle %}

<image-slideshow-{{ ai_gen_id }} class="ai-slideshow-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-slideshow-wrapper-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-slideshow-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-slideshow-track-{{ ai_gen_id }}" data-track>
      {% for i in (1..6) %}
        {% liquid
          assign set_enabled_key = 'set_' | append: i | append: '_enabled'
          assign image_1_key = 'set_' | append: i | append: '_image_1'
          assign image_2_key = 'set_' | append: i | append: '_image_2'
          assign image_3_key = 'set_' | append: i | append: '_image_3'

          assign set_enabled = block.settings[set_enabled_key]
          assign image_1 = block.settings[image_1_key]
          assign image_2 = block.settings[image_2_key]
          assign image_3 = block.settings[image_3_key]
        %}

        {% if set_enabled %}
          <div class="ai-slideshow-set-{{ ai_gen_id }}" data-set="{{ i }}">
            <div class="ai-slideshow-set-images-{{ ai_gen_id }}">
              <div class="ai-slideshow-image-wrapper-{{ ai_gen_id }}">
                {% if image_1 %}
                  <img
                    src="{{ image_1 | image_url: width: 800 }}"
                    alt="{{ image_1.alt | escape }}"
                    loading="lazy"
                    width="{{ image_1.width }}"
                    height="{{ image_1.height }}"
                    class="ai-slideshow-image-{{ ai_gen_id }}"
                  >
                {% else %}
                  <div class="ai-slideshow-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              {% if block.settings.images_per_set >= 2 %}
                <div class="ai-slideshow-image-wrapper-{{ ai_gen_id }}">
                  {% if image_2 %}
                    <img
                      src="{{ image_2 | image_url: width: 800 }}"
                      alt="{{ image_2.alt | escape }}"
                      loading="lazy"
                      width="{{ image_2.width }}"
                      height="{{ image_2.height }}"
                      class="ai-slideshow-image-{{ ai_gen_id }}"
                    >
                  {% else %}
                    <div class="ai-slideshow-placeholder-{{ ai_gen_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.images_per_set == 3 %}
                <div class="ai-slideshow-image-wrapper-{{ ai_gen_id }}">
                  {% if image_3 %}
                    <img
                      src="{{ image_3 | image_url: width: 800 }}"
                      alt="{{ image_3.alt | escape }}"
                      loading="lazy"
                      width="{{ image_3.width }}"
                      height="{{ image_3.height }}"
                      class="ai-slideshow-image-{{ ai_gen_id }}"
                    >
                  {% else %}
                    <div class="ai-slideshow-placeholder-{{ ai_gen_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_controls %}
      <div class="ai-slideshow-controls-{{ ai_gen_id }}">
        <button
          class="ai-slideshow-button-{{ ai_gen_id }}"
          data-prev
          aria-label="Previous"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="ai-slideshow-dots-{{ ai_gen_id }}" data-dots></div>

        <button
          class="ai-slideshow-button-{{ ai_gen_id }}"
          data-next
          aria-label="Next"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</image-slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageSlideshow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('[data-track]');
        this.sets = this.querySelectorAll('[data-set]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');
        this.currentIndex = 0;
        this.setsPerView = this.getSetsPerView();
      }

      connectedCallback() {
        this.createDots();
        this.updateButtons();
        this.setupEventListeners();
        window.addEventListener('resize', () => this.handleResize());
      }

      getSetsPerView() {
        if (window.innerWidth <= 749) {
          return {{ block.settings.sets_per_row_mobile }};
        }
        return {{ block.settings.sets_per_row_desktop }};
      }

      createDots() {
        if (!this.dotsContainer) return;
        
        this.dotsContainer.innerHTML = '';
        const totalPages = Math.ceil(this.sets.length / this.setsPerView);
        
        for (let i = 0; i < totalPages; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-slideshow-dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to page ${i + 1}`);
          if (i === 0) dot.classList.add('active');
          dot.addEventListener('click', () => this.goToPage(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prev());
        }
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.next());
        }
      }

      handleResize() {
        const newSetsPerView = this.getSetsPerView();
        if (newSetsPerView !== this.setsPerView) {
          this.setsPerView = newSetsPerView;
          this.currentIndex = 0;
          this.createDots();
          this.scrollToIndex(0);
          this.updateButtons();
        }
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.scrollToIndex(this.currentIndex);
          this.updateButtons();
          this.updateDots();
        }
      }

      next() {
        const maxIndex = Math.ceil(this.sets.length / this.setsPerView) - 1;
        if (this.currentIndex < maxIndex) {
          this.currentIndex++;
          this.scrollToIndex(this.currentIndex);
          this.updateButtons();
          this.updateDots();
        }
      }

      goToPage(index) {
        this.currentIndex = index;
        this.scrollToIndex(index);
        this.updateButtons();
        this.updateDots();
      }

      scrollToIndex(index) {
        const setWidth = this.sets[0].offsetWidth;
        const gap = {{ block.settings.image_gap }};
        const scrollPosition = index * this.setsPerView * (setWidth + gap);
        this.track.scrollTo({
          left: scrollPosition,
          behavior: 'smooth'
        });
      }

      updateButtons() {
        if (!this.prevButton || !this.nextButton) return;
        
        const maxIndex = Math.ceil(this.sets.length / this.setsPerView) - 1;
        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex >= maxIndex;
      }

      updateDots() {
        if (!this.dotsContainer) return;
        
        const dots = this.dotsContainer.querySelectorAll('.ai-slideshow-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }

    customElements.define('image-slideshow-{{ ai_gen_id }}', ImageSlideshow{{ ai_gen_id }});
  })();
</script>

