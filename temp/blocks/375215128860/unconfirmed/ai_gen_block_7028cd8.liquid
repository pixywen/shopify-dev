{% doc %}
  @prompt
    Generate a product component; the top left corner can be customized with a label.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-product-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-card-label-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.label_offset }}px;
    left: {{ block.settings.label_offset }}px;
    background-color: {{ block.settings.label_background }};
    color: {{ block.settings.label_text_color }};
    padding: {{ block.settings.label_padding_vertical }}px {{ block.settings.label_padding_horizontal }}px;
    border-radius: {{ block.settings.label_border_radius }}px;
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: 600;
    z-index: 2;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-card-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-product-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 500;
  }

  .ai-product-card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-product-card-button-{{ ai_gen_id }} {
    margin-top: 8px;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
  }

  .ai-product-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-product-card-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }
{% endstyle %}

<div class="ai-product-card-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.product %}
      {% if block.settings.product.featured_image %}
        <img
          src="{{ block.settings.product.featured_image | image_url: width: 800 }}"
          alt="{{ block.settings.product.featured_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.product.featured_image.width }}"
          height="{{ block.settings.product.featured_image.height }}"
          class="ai-product-card-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-product-card-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    {% else %}
      <div class="ai-product-card-image-placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
        <div class="ai-product-card-empty-state-{{ ai_gen_id }}">
          Next, select a product
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_label and block.settings.label_text != blank %}
      <div class="ai-product-card-label-{{ ai_gen_id }}">
        {{ block.settings.label_text }}
      </div>
    {% endif %}
  </div>

  <div class="ai-product-card-content-{{ ai_gen_id }}">
    {% if block.settings.product %}
      <h3 class="ai-product-card-title-{{ ai_gen_id }}">
        {{ block.settings.product.title }}
      </h3>

      {% if block.settings.show_price %}
        <div class="ai-product-card-price-{{ ai_gen_id }}">
          {{ block.settings.product.price | money }}
        </div>
      {% endif %}

      {% if block.settings.show_description and block.settings.product.description != blank %}
        <p class="ai-product-card-description-{{ ai_gen_id }}">
          {{ block.settings.product.description | strip_html | truncate: 120 }}
        </p>
      {% endif %}

      {% if block.settings.show_button %}
        <a
          href="{{ block.settings.product.url }}"
          class="ai-product-card-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    {% else %}
      <h3 class="ai-product-card-title-{{ ai_gen_id }}">
        Product title
      </h3>
      <div class="ai-product-card-price-{{ ai_gen_id }}">
        $0.00
      </div>
    {% endif %}
  </div>
</div>

