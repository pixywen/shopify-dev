{% doc %}
  @prompt
    Create a countdown component
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-countdown-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: center;
  }

  .ai-countdown-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-countdown-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 600;
  }

  .ai-countdown-timer-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: {{ block.settings.timer_gap }}px;
    flex-wrap: wrap;
  }

  .ai-countdown-unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: {{ block.settings.unit_width }}px;
  }

  .ai-countdown-value-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: 700;
    color: {{ block.settings.number_color }};
    background-color: {{ block.settings.box_background }};
    padding: {{ block.settings.box_padding }}px;
    border-radius: {{ block.settings.box_radius }}px;
    min-width: {{ block.settings.box_min_width }}px;
    line-height: 1.2;
    {% if block.settings.show_box_border %}
      border: {{ block.settings.box_border_width }}px solid {{ block.settings.box_border_color }};
    {% endif %}
  }

  .ai-countdown-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    margin-top: {{ block.settings.label_spacing }}px;
    text-transform: {{ block.settings.label_transform }};
  }

  .ai-countdown-message-{{ ai_gen_id }} {
    color: {{ block.settings.message_color }};
    font-size: {{ block.settings.message_size }}px;
    margin-top: {{ block.settings.message_spacing }}px;
  }

  .ai-countdown-expired-{{ ai_gen_id }} {
    display: none;
  }

  .ai-countdown-expired-{{ ai_gen_id }}.active {
    display: block;
  }

  @media screen and (max-width: 749px) {
    .ai-countdown-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-countdown-value-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.number_size }}px * 0.8);
      padding: calc({{ block.settings.box_padding }}px * 0.8);
    }

    .ai-countdown-unit-{{ ai_gen_id }} {
      min-width: calc({{ block.settings.unit_width }}px * 0.8);
    }

    .ai-countdown-timer-{{ ai_gen_id }} {
      gap: calc({{ block.settings.timer_gap }}px * 0.7);
    }
  }
{% endstyle %}

<countdown-timer-{{ ai_gen_id }}
  class="ai-countdown-{{ ai_gen_id }}"
  data-end-date="{{ block.settings.end_date }}"
  data-end-time="{{ block.settings.end_time }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-countdown-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-countdown-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-countdown-timer-{{ ai_gen_id }}" data-timer>
      {% if block.settings.show_days %}
        <div class="ai-countdown-unit-{{ ai_gen_id }}">
          <div class="ai-countdown-value-{{ ai_gen_id }}" data-days>00</div>
          <div class="ai-countdown-label-{{ ai_gen_id }}">{{ block.settings.days_label }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_hours %}
        <div class="ai-countdown-unit-{{ ai_gen_id }}">
          <div class="ai-countdown-value-{{ ai_gen_id }}" data-hours>00</div>
          <div class="ai-countdown-label-{{ ai_gen_id }}">{{ block.settings.hours_label }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_minutes %}
        <div class="ai-countdown-unit-{{ ai_gen_id }}">
          <div class="ai-countdown-value-{{ ai_gen_id }}" data-minutes>00</div>
          <div class="ai-countdown-label-{{ ai_gen_id }}">{{ block.settings.minutes_label }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_seconds %}
        <div class="ai-countdown-unit-{{ ai_gen_id }}">
          <div class="ai-countdown-value-{{ ai_gen_id }}" data-seconds>00</div>
          <div class="ai-countdown-label-{{ ai_gen_id }}">{{ block.settings.seconds_label }}</div>
        </div>
      {% endif %}
    </div>

    {% if block.settings.message != blank %}
      <div class="ai-countdown-message-{{ ai_gen_id }}">{{ block.settings.message }}</div>
    {% endif %}

    {% if block.settings.expired_message != blank %}
      <div class="ai-countdown-expired-{{ ai_gen_id }}" data-expired>
        {{ block.settings.expired_message }}
      </div>
    {% endif %}
  </div>
</countdown-timer-{{ ai_gen_id }}>

<script>
  (function() {
    class CountdownTimer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.endDate = this.dataset.endDate;
        this.endTime = this.dataset.endTime;
        this.timer = this.querySelector('[data-timer]');
        this.expiredMessage = this.querySelector('[data-expired]');
        this.daysEl = this.querySelector('[data-days]');
        this.hoursEl = this.querySelector('[data-hours]');
        this.minutesEl = this.querySelector('[data-minutes]');
        this.secondsEl = this.querySelector('[data-seconds]');
      }

      connectedCallback() {
        if (!this.endDate) {
          return;
        }

        this.targetDate = new Date(this.endDate + ' ' + (this.endTime || '23:59:59')).getTime();

        if (isNaN(this.targetDate)) {
          return;
        }

        this.updateCountdown();
        this.interval = setInterval(() => this.updateCountdown(), 1000);
      }

      disconnectedCallback() {
        if (this.interval) {
          clearInterval(this.interval);
        }
      }

      updateCountdown() {
        const now = new Date().getTime();
        const distance = this.targetDate - now;

        if (distance < 0) {
          this.handleExpired();
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        if (this.daysEl) this.daysEl.textContent = String(days).padStart(2, '0');
        if (this.hoursEl) this.hoursEl.textContent = String(hours).padStart(2, '0');
        if (this.minutesEl) this.minutesEl.textContent = String(minutes).padStart(2, '0');
        if (this.secondsEl) this.secondsEl.textContent = String(seconds).padStart(2, '0');
      }

      handleExpired() {
        if (this.interval) {
          clearInterval(this.interval);
        }

        if (this.timer) {
          this.timer.style.display = 'none';
        }

        if (this.expiredMessage) {
          this.expiredMessage.classList.add('active');
        }
      }
    }

    customElements.define('countdown-timer-{{ ai_gen_id }}', CountdownTimer{{ ai_gen_id }});
  })();
</script>

