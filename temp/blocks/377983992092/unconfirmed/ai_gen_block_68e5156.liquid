{% doc %}
  @prompt
    Generate a top scrolling banner. The banner background color can be selected.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-scrolling-banner-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    overflow: hidden;
    position: relative;
    padding: {{ block.settings.banner_height }}px 0;
  }

  .ai-scrolling-banner-track-{{ ai_gen_id }} {
    display: flex;
    width: max-content;
    animation: ai-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-scrolling-banner-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
    padding: 0 {{ block.settings.item_spacing | divided_by: 2 }}px;
    white-space: nowrap;
  }

  .ai-scrolling-banner-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_spacing }}px;
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
  }

  .ai-scrolling-banner-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-scrolling-banner-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  @keyframes ai-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-scrolling-banner-track-{{ ai_gen_id }}:hover {
    animation-play-state: {% if block.settings.pause_on_hover %}paused{% else %}running{% endif %};
  }

  @media screen and (max-width: 749px) {
    .ai-scrolling-banner-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-scrolling-banner-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-scrolling-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-scrolling-banner-track-{{ ai_gen_id }}">
    <div class="ai-scrolling-banner-content-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        <div class="ai-scrolling-banner-item-{{ ai_gen_id }}">
          {% if block.settings.show_icon %}
            <span class="ai-scrolling-banner-icon-{{ ai_gen_id }}">
              {% if block.settings.icon_style == 'star' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {% elsif block.settings.icon_style == 'circle' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="10"/>
                </svg>
              {% elsif block.settings.icon_style == 'heart' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
              {% elsif block.settings.icon_style == 'diamond' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2L2 9l10 13L22 9 12 2z"/>
                </svg>
              {% endif %}
            </span>
          {% endif %}
          <span>{{ block.settings.banner_text }}</span>
        </div>
      {% endfor %}
    </div>
    <div class="ai-scrolling-banner-content-{{ ai_gen_id }}" aria-hidden="true">
      {% for i in (1..10) %}
        <div class="ai-scrolling-banner-item-{{ ai_gen_id }}">
          {% if block.settings.show_icon %}
            <span class="ai-scrolling-banner-icon-{{ ai_gen_id }}">
              {% if block.settings.icon_style == 'star' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {% elsif block.settings.icon_style == 'circle' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="10"/>
                </svg>
              {% elsif block.settings.icon_style == 'heart' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
              {% elsif block.settings.icon_style == 'diamond' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 2L2 9l10 13L22 9 12 2z"/>
                </svg>
              {% endif %}
            </span>
          {% endif %}
          <span>{{ block.settings.banner_text }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Scrolling banner",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Icon"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show icon",
      "default": true
    },
    {
      "type": "select",
      "id": "icon_style",
      "label": "Icon style",
      "options": [
        {
          "value": "star",
          "label": "Star"
        },
        {
          "value": "circle",
          "label": "Circle"
        },
        {
          "value": "heart",
          "label": "Heart"
        },
        {
          "value": "diamond",
          "label": "Diamond"
        }
      ],
      "default": "star"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 10,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Icon size",
      "default": 16
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "icon_spacing",
      "min": 4,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Icon spacing",
      "default": 8
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 8,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Vertical padding",
      "default": 12
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 14
    },
    {
      "type": "select",
      "id": "text_weight",
      "label": "Text weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semibold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "500"
    },
    {
      "type": "range",
      "id": "item_spacing",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Item spacing",
      "default": 40
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "s",
      "label": "Scroll speed",
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on hover",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Scrolling banner"
    }
  ]
}
{% endschema %}
