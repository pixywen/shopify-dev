      "default": 4
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "s",
      "label": "Scroll speed",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Scrolling banner"
    }
  ]
}
{% endschema %}
