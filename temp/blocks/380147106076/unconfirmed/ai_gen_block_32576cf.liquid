{% doc %}
  @prompt
    Create a component that can display short videos and play them automatically in a loop.  It should link to a product page and include an Instagram icon watermark. The Instagram icon should also be clickable and link to a relevant page., Multiple sets of videos can be added.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-grid-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-video-grid-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
    width: 100%;
  }

  .ai-video-item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-video-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.aspect_ratio }}%;
    background-color: #000000;
  }

  .ai-video-element-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-link-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    display: block;
  }

  .ai-video-instagram-icon-{{ ai_gen_id }} {
    position: absolute;
    bottom: {{ block.settings.icon_position_bottom }}px;
    right: {{ block.settings.icon_position_right }}px;
    z-index: 3;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: {{ block.settings.icon_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease, transform 0.3s ease;
    cursor: pointer;
  }

  .ai-video-instagram-icon-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: scale(1.1);
  }

  .ai-video-instagram-icon-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
    fill: {{ block.settings.icon_color }};
  }

  .ai-video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 16px;
  }

  .ai-video-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-video-empty-state-{{ ai_gen_id }} {
    font-size: 12px;
    color: #666;
    text-align: center;
    padding: 0 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-video-grid-container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-video-instagram-icon-{{ ai_gen_id }} {
      width: calc({{ block.settings.icon_size }}px * 0.8);
      height: calc({{ block.settings.icon_size }}px * 0.8);
      bottom: calc({{ block.settings.icon_position_bottom }}px * 0.8);
      right: calc({{ block.settings.icon_position_right }}px * 0.8);
    }

    .ai-video-instagram-icon-{{ ai_gen_id }} svg {
      width: calc({{ block.settings.icon_size }}px * 0.48);
      height: calc({{ block.settings.icon_size }}px * 0.48);
    }
  }
{% endstyle %}

<video-grid-{{ ai_gen_id }}
  class="ai-video-grid-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-video-grid-container-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% liquid
        assign video_enabled_key = 'video_' | append: i | append: '_enabled'
        assign video_url_key = 'video_' | append: i | append: '_url'
        assign product_link_key = 'video_' | append: i | append: '_product_link'
        assign instagram_link_key = 'video_' | append: i | append: '_instagram_link'

        assign video_enabled = block.settings[video_enabled_key]
        assign video_url = block.settings[video_url_key]
        assign product_link = block.settings[product_link_key]
        assign instagram_link = block.settings[instagram_link_key]
      %}

      {% if video_enabled %}
        <div class="ai-video-item-{{ ai_gen_id }}" data-video-index="{{ i }}">
          <div class="ai-video-container-{{ ai_gen_id }}">
            {% if video_url != blank %}
              <video
                class="ai-video-element-{{ ai_gen_id }}"
                autoplay
                loop
                muted
                playsinline
                {% if block.settings.show_controls %}controls{% endif %}
              >
                <source src="{{ video_url }}" type="video/mp4">
              </video>

              {% if product_link != blank %}
                <a
                  href="{{ product_link }}"
                  class="ai-video-link-{{ ai_gen_id }}"
                  aria-label="View product"
                ></a>
              {% endif %}

              {% if instagram_link != blank %}
                <a
                  href="{{ instagram_link }}"
                  class="ai-video-instagram-icon-{{ ai_gen_id }}"
                  aria-label="View on Instagram"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              {% endif %}
            {% else %}
              <div class="ai-video-placeholder-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="23 7 16 12 23 17 23 7"></polygon>
                  <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                </svg>
                <div class="ai-video-empty-state-{{ ai_gen_id }}">
                  Add video {{ i }}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</video-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.videos = this.querySelectorAll('.ai-video-element-{{ ai_gen_id }}');
        if (this.videos.length > 0) {
          this.setupIntersectionObserver();
        }
      }

      setupIntersectionObserver() {
        const options = {
          root: null,
          rootMargin: '0px',
          threshold: 0.5
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            const video = entry.target;
            if (entry.isIntersecting) {
              video.play().catch(() => {});
            } else {
              video.pause();
            }
          });
        }, options);

        this.videos.forEach((video) => {
          observer.observe(video);
        });
      }
    }

    customElements.define('video-grid-{{ ai_gen_id }}', VideoGrid{{ ai_gen_id }});
  })();
</script>

