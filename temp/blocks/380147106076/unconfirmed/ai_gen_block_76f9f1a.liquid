{% doc %}
  @prompt
    Generate a "shop the feed" component., Multiple sets of videos can be added.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shop-feed-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-shop-feed-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-shop-feed-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-shop-feed-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-shop-feed-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-shop-feed-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-shop-feed-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_radius }}px;
    aspect-ratio: 1;
    cursor: pointer;
  }

  .ai-shop-feed-media-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-shop-feed-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-shop-feed-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-shop-feed-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-shop-feed-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-shop-feed-video-indicator-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 32px;
    height: 32px;
    background: rgba(0, 0, 0, 0.6);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    pointer-events: none;
  }

  .ai-shop-feed-video-indicator-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
  }

  .ai-shop-feed-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ block.settings.overlay_color }};
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-shop-feed-item-{{ ai_gen_id }}:hover .ai-shop-feed-overlay-{{ ai_gen_id }} {
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-shop-feed-icon-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    color: {{ block.settings.icon_color }};
    opacity: 0;
    transform: scale(0.8);
    transition: all 0.3s ease;
  }

  .ai-shop-feed-item-{{ ai_gen_id }}:hover .ai-shop-feed-icon-{{ ai_gen_id }} {
    opacity: 1;
    transform: scale(1);
  }

  .ai-shop-feed-product-tag-{{ ai_gen_id }} {
    position: absolute;
    bottom: 12px;
    left: 12px;
    background: {{ block.settings.tag_background }};
    color: {{ block.settings.tag_text_color }};
    padding: 8px 12px;
    border-radius: {{ block.settings.tag_radius }}px;
    font-size: 12px;
    font-weight: 500;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
    pointer-events: none;
  }

  .ai-shop-feed-item-{{ ai_gen_id }}:hover .ai-shop-feed-product-tag-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  @media screen and (max-width: 989px) {
    .ai-shop-feed-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-shop-feed-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-shop-feed-subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-shop-feed-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-shop-feed-{{ ai_gen_id }} {
      padding: 30px 16px;
    }

    .ai-shop-feed-header-{{ ai_gen_id }} {
      margin-bottom: 24px;
    }
  }
{% endstyle %}

<shop-the-feed-{{ ai_gen_id }} class="ai-shop-feed-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-shop-feed-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-shop-feed-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-shop-feed-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-shop-feed-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-shop-feed-grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign video_key = 'video_' | append: i
          assign product_key = 'product_' | append: i
          assign image = block.settings[image_key]
          assign video = block.settings[video_key]
          assign product = block.settings[product_key]
        %}

        <div class="ai-shop-feed-item-{{ ai_gen_id }}" data-feed-item="{{ i }}">
          <div class="ai-shop-feed-media-wrapper-{{ ai_gen_id }}">
            {% if video != blank %}
              {% if video.sources[1].url %}
                <video
                  class="ai-shop-feed-video-{{ ai_gen_id }}"
                  playsinline
                  muted
                  loop
                  preload="metadata"
                  data-video-item="{{ i }}"
                >
                  <source src="{{ video.sources[1].url }}" type="{{ video.sources[1].mime_type }}">
                  <source src="{{ video.sources[0].url }}" type="{{ video.sources[0].mime_type }}">
                </video>
              {% endif %}
              <div class="ai-shop-feed-video-indicator-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            {% elsif image %}
              <img
                src="{{ image | image_url: width: 800 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="800"
                height="800"
                class="ai-shop-feed-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-shop-feed-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}

            <div class="ai-shop-feed-overlay-{{ ai_gen_id }}">
              <svg class="ai-shop-feed-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
            </div>

            {% if product != blank %}
              <div class="ai-shop-feed-product-tag-{{ ai_gen_id }}">
                {{ product.title }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</shop-the-feed-{{ ai_gen_id }}>

<script>
  (function() {
    class ShopTheFeed{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.feedItems = this.querySelectorAll('.ai-shop-feed-item-{{ ai_gen_id }}');
        this.videos = this.querySelectorAll('.ai-shop-feed-video-{{ ai_gen_id }}');
        this.setupEventListeners();
        this.setupVideoPlayback();
      }

      setupEventListeners() {
        this.feedItems.forEach((item) => {
          item.addEventListener('click', () => {
            const itemIndex = item.getAttribute('data-feed-item');
            const productUrl = this.getProductUrl(itemIndex);
            
            if (productUrl) {
              window.location.href = productUrl;
            }
          });
        });
      }

      setupVideoPlayback() {
        const observerOptions = {
          root: null,
          rootMargin: '0px',
          threshold: 0.5
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            const video = entry.target;
            if (entry.isIntersecting) {
              video.play().catch(() => {});
            } else {
              video.pause();
            }
          });
        }, observerOptions);

        this.videos.forEach((video) => {
          observer.observe(video);
          
          video.addEventListener('mouseenter', () => {
            video.play().catch(() => {});
          });
        });
      }

      getProductUrl(index) {
        const products = {
          {% for i in (1..12) %}
            {% liquid
              assign product_key = 'product_' | append: i
              assign product = block.settings[product_key]
            %}
            {% if product != blank %}
              '{{ i }}': '{{ product.url }}',
            {% endif %}
          {% endfor %}
        };
        
        return products[index] || null;
      }
    }

    customElements.define('shop-the-feed-{{ ai_gen_id }}', ShopTheFeed{{ ai_gen_id }});
  })();
</script>

