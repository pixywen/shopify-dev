{% doc %}
  @prompt
    Generate a "Shop the Feed" component. This component allows you to add videos or images, and also add links. The number of items can be increased or decreased as needed, and the component includes an Instagram icon watermark.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shop-feed-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-shop-feed-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-shop-feed-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-shop-feed-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 10px;
    font-weight: 600;
  }

  .ai-shop-feed-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-shop-feed-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-shop-feed-item-{{ ai_gen_id }} {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: {{ block.settings.item_border_radius }}px;
    cursor: pointer;
  }

  .ai-shop-feed-item-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-shop-feed-media-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-shop-feed-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-shop-feed-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-shop-feed-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  .ai-shop-feed-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ block.settings.overlay_color }};
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-shop-feed-item-{{ ai_gen_id }}:hover .ai-shop-feed-overlay-{{ ai_gen_id }} {
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-shop-feed-watermark-{{ ai_gen_id }} {
    position: absolute;
    {{ block.settings.watermark_position }}: 12px;
    width: {{ block.settings.watermark_size }}px;
    height: {{ block.settings.watermark_size }}px;
    background-color: {{ block.settings.watermark_bg_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .ai-shop-feed-watermark-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.watermark_size }}px * 0.55);
    height: calc({{ block.settings.watermark_size }}px * 0.55);
    fill: {{ block.settings.watermark_icon_color }};
  }

  @media screen and (max-width: 989px) {
    .ai-shop-feed-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-shop-feed-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-shop-feed-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-shop-feed-subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.9);
    }
  }
{% endstyle %}

<shop-the-feed-{{ ai_gen_id }} class="ai-shop-feed-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-shop-feed-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-shop-feed-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-shop-feed-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-shop-feed-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-shop-feed-grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% liquid
          assign item_enabled_key = 'item_' | append: i | append: '_enabled'
          assign item_image_key = 'item_' | append: i | append: '_image'
          assign item_video_key = 'item_' | append: i | append: '_video'
          assign item_link_key = 'item_' | append: i | append: '_link'

          assign item_enabled = block.settings[item_enabled_key]
          assign item_image = block.settings[item_image_key]
          assign item_video = block.settings[item_video_key]
          assign item_link = block.settings[item_link_key]
        %}

        {% if item_enabled %}
          <div class="ai-shop-feed-item-{{ ai_gen_id }}">
            {% if item_link != blank %}
              <a href="{{ item_link }}" class="ai-shop-feed-item-link-{{ ai_gen_id }}">
            {% else %}
              <div class="ai-shop-feed-item-link-{{ ai_gen_id }}">
            {% endif %}

              {% if item_video != blank %}
                <video
                  class="ai-shop-feed-media-{{ ai_gen_id }}"
                  src="{{ item_video }}"
                  playsinline
                  muted
                  loop
                  autoplay
                ></video>
              {% elsif item_image != blank %}
                <img
                  src="{{ item_image | image_url: width: 600 }}"
                  alt="{{ item_image.alt | escape }}"
                  class="ai-shop-feed-media-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-shop-feed-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                  <div class="ai-shop-feed-empty-state-{{ ai_gen_id }}">
                    Add image or video
                  </div>
                </div>
              {% endif %}

              <div class="ai-shop-feed-overlay-{{ ai_gen_id }}"></div>

              {% if block.settings.show_watermark %}
                <div class="ai-shop-feed-watermark-{{ ai_gen_id }}">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4H7.6m9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8 1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5 5 5 0 0 1-5 5 5 5 0 0 1-5-5 5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 3-3 3 3 0 0 0-3-3z"/>
                  </svg>
                </div>
              {% endif %}

            {% if item_link != blank %}
              </a>
            {% else %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</shop-the-feed-{{ ai_gen_id }}>

<script>
  (function() {
    class ShopTheFeed{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.videos = this.querySelectorAll('video');
        this.setupVideoPlayback();
      }

      setupVideoPlayback() {
        this.videos.forEach((video) => {
          video.addEventListener('mouseenter', () => {
            video.play();
          });

          video.addEventListener('mouseleave', () => {
            video.pause();
            video.currentTime = 0;
          });
        });
      }
    }

    customElements.define('shop-the-feed-{{ ai_gen_id }}', ShopTheFeed{{ ai_gen_id }});
  })();
</script>

